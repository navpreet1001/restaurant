html
body
	position relative
	height 100%
	margin 0
	padding 0
	font-family "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif
	font-size 100%
	background $background
	z-index 1

body.locked
	height 100%
	margin 0
	padding 0
	overflow hidden

*
	margin: 0
	padding: 0

.wf-loading
	font-family "ff-basic-gothic-web-pro", "abril-titling"
	visibility hidden

.wf-active
	visibility visible

img, object, embed
	max-width 100%
	height auto

object, embed
	height 100%

ul
	list-style none

.hide
	display none

.page
	position relative
	width 100%
	min-height 100%
	height 100%
	margin 0
	padding 0
	font-family "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif
	font-size 100%
	background $background
	z-index 1

.page.locked
	position fixed
	max-height 100%
	margin 0
	padding 0
	overflow hidden

textarea
	border none
	background none
	outline none
	resize none

.antialiased
	-webkit-font-smoothing antialiased

img
	display inline-block
	vertical-align middle
	-ms-interpolation-mode bicubic

a
	color #38b1d5
	text-decoration none
	line-height inherit
	cursor: pointer

a:hover, a:focus, a.active
	cursor pointer
	outline: 0
	-moz-outline: none

*:focus
	outline 0

a img
	border none

em, i
	font-style italic

strong, b
	font-weight bold
	line-height inherit color #000
