agm-map {
  height: 500px;
}

.contact
  float left
  width 1200px
  margin 20px 0 60px 0
  padding 0
  .contact-holder
    float left
    width 550px
    margin 0 50px 0 0

    h2
      float left
      text-align center
      width 100%
      margin 0 0 50px 0
      font-weight 700
      font-size 55px
      line-height 55px
      color $heading

    p
      float left
      width 500px
      margin 0 0 0 25px
      font-weight 400
      font-size 17px
      line-height 27px

  .contact-content
    float left
    width 550px
    min-height 360px
    margin 0 0 0 0
    padding 20px 125px
    background rgba(#6b594a, 0.04)

    h1
      margin 30px 0 0 0
      font italic small-caps bold 51px/71px fantasy
      text-align center
      color $heading

    h3
      float left
      width 300px
      margin 0 0 20px 0
      font-weight 500
      font-size 26px
      line-height 29px
      text-align center
    h5
      float left
      width 100%
      margin 0 0 10px 0
      font-weight 300
      font-size 17px
      line-height 19px
      text-align center

    .phone
      float left
      width 180px
      margin 10px 0 13px 60px
      border $border
      border-radius 8px
      background $button
      p
        float left
        width 100%
        margin 0
        padding 10px 0
        text-align center
        font-weight 600
        font-size 24px
        line-height 26px
        color $white
        letter-spacing 1.5px

  // .contact-content
  //   float left
  //   width 600px
  //   padding 0 100px
  //   margin 0 0 40px 0


  .contact-form
    float left
    width 518px
    margin 0 0 0 50px
    padding 25px
    background $background-light
    border $border
    border-radius 6px

    input,textarea
      float left
      width 466px
      font-size 19px
      line-height 44px
      border $border-light
      background $white
      padding 0 0 0 12px
      margin 0 0 15px 0
    textarea
      height 120px

    button
      float left
      width 100%
      font-size 24px
      line-height 34px

.map
  float left
  width 1198px
  border $border-light
  margin 0 0 20px 0
