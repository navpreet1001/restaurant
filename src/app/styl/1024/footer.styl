footer
	position relative
	width 100%
	padding: 0
	bottom 0
	margin 0 auto

	.footer
		float left
		width 100%
		height 200px
		padding: 24px 0 0 0
		margin 0
		background $background-texture
		border-top $border

		.footer-holder
			position relative
			width 740px
			margin 0 auto
			// height 200px
			// background $logo

			h3
				float: left
				padding: 0 10px 6px 0
				margin: 0 0 10px 0
				font-weight 500
				font-size 16px
				line-height 16px
				color $font
				border-bottom 1px solid $grey
				text-shadow 1px 1px 1px $grey

			h5
				float left
				width 100%
				margin 0
				font-weight 400
				font-size 14px
				line-height 21px
				color $grey

			h6
				float left
				width 100%
				margin 0
				font-weight 400
				font-size 13px
				line-height 17px
				color $grey

			.detail
				float left
				width 190px
				padding: 0 0 20px 0
				margin 0 20px 0 0

			.link
				float left
				width 140px
				padding: 0 0 20px 0
				margin 0 20px 0 0

				h5
					margin 0 0 4px 0
					font-size 14px
					line-height 19px
					cursor pointer

				h5:hover
					color $font

			.icons
				float left
				width 100%

				.svg-inline--fa
					margin 0 0 0 10px
					cursor pointer
