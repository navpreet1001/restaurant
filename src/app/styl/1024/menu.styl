.menu
  float left
  width 1200px
  margin 0
  padding 0

  h1
    float left
    width 100%
    margin 0 0 40px 0
    padding 0
    font-style italic

.menu-slider
  float left
  width 1198px
  height 500px
  margin 0 0 40px 0
  border $border

  .carousel img {
    width:1198px;
    height: 498px;
  }


.menu-holder
  float left
  width 100%
  margin 0 0 20px 0
  padding 0

.menu-box
  float left
  width 1200px
  margin 0 0 30px 0
  padding 0
  // background $active

.menu-title
  float left
  width 1180px
  margin 0 0 30px 20px
  padding 0

  h2
    float left
    // width 1180px
    // text-align center
    margin 0
    padding 0 0 6px 0
    font-weight 200
    font-size 32px
    line-height 32px
    color $button
    font-style italic
    border-bottom 2px solid $button
    box-shadow 0 1px #802f2f

.menu-item
  float left
  width 560px
  margin 0 20px 20px 20px
  padding 10px 20px 10px 20px
  border-radius 2px
  background rgba(#6b594a, 0.04)
  border-bottom $border-dashed

  h3
    float left
    width 460px
    margin 0 0 10px 0
    font-weight 400
    font-size 21px
    line-height 21px
    color $font-light

  h6
    float left
    width 60px
    margin 0 0 10px 0
    font-weight 500
    font-size 16px
    line-height 16px
    color $font-light

  p
    float left
    width 510px
    margin 0
    padding 0
    color $font-light
    font-weight 500px
    font-size 14px
    line-height 17px
    font-style italic

.menu-item-small
  float left
  width 360px
  margin 0 20px 20px 20px
  padding 10px 20px 10px 20px
  border-radius 2px
  background rgba(#6b594a, 0.04)
  border-bottom $border-dashed

  h3
    float left
    width 260px
    margin 0 0 10px 0
    font-weight 400
    font-size 21px
    line-height 21px
    color $font-light

  h6
    float left
    width 60px
    margin 0 0 10px 0
    font-weight 500
    font-size 16px
    line-height 16px
    color $font-light

  p
    float left
    width 320px
    margin 0
    padding 0
    color $font-light
    font-weight 500px
    font-size 14px
    line-height 17px
    font-style italic
