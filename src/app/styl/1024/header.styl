header
  float left
  width 100%
  top 0
  padding 0
  margin 0
  background $background-texture
  border-bottom $border

  .header
    position relative
    width 1024px
    height 88px
    padding 0
    margin 0 auto

    .logo
      float left
      width 244px
      // height 46px
      // border 3px solid $logo
      // border-radius 10px
      // // background url(../../assets/tie.png)no-repeat
      // padding 0
      margin 16px 50px 0 0

      .logo-border
        float left
        width 100%
        height 46px
        border 3px solid $logo
        border-radius 10px
        // background url(../../assets/tie.png)no-repeat
        padding 0
        margin 0

      .logo-text
        float left
        width 210px
        overflow hidden
        margin -18px 0 0 17px
        text-align center
        font-weight 600
        color $logo
        background $background-texture
        font: italic small-caps bold 46px/46px fantasy;

    .mobile-nav
      display none

    nav
      display block
      float left
      width 550px
      // height 78px
      padding 0
      margin 35px 0 0 0
      // border-right #345

      .tile
        float left
        // height 78px
        padding 0
        margin 0 15px 0 0
        cursor pointer

        h4
          float left
          padding 10px 10px
          margin 0 0
          font-style italic
          font-weight 500
          font-size 19px
          line-height 24px
          color $grey
          border-radius 3px
          text-align center

        h4:hover
        .active
          color $logo
          border-bottom 3px solid $logo
          // background $background-light
          text-shadow 0.5px 0.5px #345
          // -webkit-box-shadow 2px 2px 1px 0px rgba(0,0,0,0.75)
          // -moz-box-shadow 2px 2px 1px 0px rgba(0,0,0,0.75)
          // box-shadow 2px 2px 1px 0px rgba(0,0,0,0.75)

        h4:hover
          margin -1px 0 0 0
          // color $logo
          // border-bottom 3px solid $logo

    .header-contact
      display block
      float right
      width 180px
      margin 14px 0 0 0
      padding 10px
      border-radius 5px
      text-align center
      color $white
      background $logo
      font-weight 400
      font-size 21px
      line-height 25px
      cursor pointer

      .fa-phone
        float left
        color $white
        font-size 21px
        margin 0 10px 0 0
        text-decoration none

      a
        float left
        color $white
        text-decoration none
