.about-square
  float left
  width 1200px
  margin 0 0 80px 0

  .about-title
    float left
    width 700px
    margin 0 200px 30px 0
    padding 0

    h2
      float left
      width 100%
      margin 0 0 50px 0
      font-weight 700
      font-size 55px
      line-height 55px
      color $heading

    p
      float left
      width 700px
      margin 0
      font-weight 400
      font-size 17px
      line-height 27px

  .owner-image
    float left
    width 300px
    margin 0
    padding 0

    .image
      float left
      width 300px
      margin 0 0 20px 0
      padding 0

      img
        float left
        width 298px
        height 250px
        border $border
    .info
      float left
      width 150px

      h5
        float left
        width 100%
        padding 0
        margin 0 0 10px 0
        font-size 18px
        line-height 18px

      a
        float left
        width 100%
        padding 0
        margin 0 0 10px 0
        text-decoration none
        font-size 15px
        line-height 15px
        color $font
  .icon
    float left
    width 400px
    margin 0
    padding 0

    h4
      float left
      width 100%
      text-align center
      padding 0
      margin 0 0 20px 0
      font-size 23px
      line-height 23px

    .fa-thumbs-up
    .fa-gratipay
    .fa-smile
      float left
      width 120px
      height 120px
      margin 0 0 20px 140px
      color $heading

    p
      float left
      width 340px
      margin 0 0 0 30px
      padding 0
      font-size 14px
      line-height 18px
      text-align center
