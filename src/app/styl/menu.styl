.menu
  float left
  width 1200px
  margin 0
  padding 0

  h1
    float left
    width 100%
    margin 0 0 40px 0
    padding 0
    font-style italic

.menu-slider
  float left
  width 1198px
  height 500px
  margin 0 0 40px 0
  border $border

  .carousel img {
    width:1198px;
    height: 500px;
  }


.menu-holder
  float left
  width 100%
  margin 0 0 20px 0
  padding 0

.menu-box
  float left
  width 1200px
  margin 0
  padding 0
  // background $active

.menu-title
  float left
  width 1180px
  margin 0 0 20px 20px
  padding 0
  // background $active

  h2
    float left
    width 1180px
    // text-align center
    margin 0
    padding 0
    font-weight 600
    font-size 32px
    line-height 32px
    color $font
    font-style italic
    z-index -2

.menu-item
  float left
  width 560px
  margin 0 20px 20px 20px
  padding 20px 20px 30px 20px
  border-radius 2px
  background rgba(#6b594a, 0.04)

  h3
    float left
    width 460px
    margin 0 0 10px 0
    font-weight 600
    font-size 21px
    line-height 21px
    color $font

  h6
    float left
    width 60px
    margin 0 0 10px 0
    font-weight 600
    font-size 16px
    line-height 16px
    color $font

  p
    float left
    width 510px
    margin 0
    padding 0
    color $font
    font-weight 500px
    font-size 15px
    line-height 19px
    font-style italic
