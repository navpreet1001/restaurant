header
  float left
  width 100%
  top 0
  padding 0
  margin 0
  background $background-texture
  border-bottom $border

  .header
    position relative
    width 320px
    height 88px
    padding 0
    margin 0 auto

    .logo
      float left
      width 244px
      margin 16px 0 0 10px

      .logo-border
        float left
        width 100%
        height 46px
        border 3px solid $logo
        border-radius 10px
        // background url(../../assets/tie.png)no-repeat
        padding 0
        margin 0

      .logo-text
        float left
        width 210px
        overflow hidden
        margin -18px 0 0 17px
        text-align center
        font-weight 600
        color $logo
        background $background-texture
        font: italic small-caps bold 46px/46px fantasy;

    .mobile-nav
      display block
      position absolute
      width 30px
      height 30px
      top 60px
      right 15px

    nav
      display none

    .header-contact
      display none
